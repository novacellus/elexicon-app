/* Hasło - widok złożony*/

.entry * {
    line-height:1.6em;
    text-rendering:optimizeLegibility;
}

div.entry, div.sense, div.cit, div.note_container {
    display:block;
}


div.cit {
    margin-left:5px;
}

div.note_container {
    margin-left:5px;
    margin-top:5px;
    margin-bottom:5px;
    padding-left:5px;
    border-left-color:#F5FF9E;
    border-left-width:1px;
    border-left-style:solid;
}

div.form {
    display:block;
}

abbr.iType {
    margin: 0 2px 0 2px;
    padding:0 2px 0 2px;
    /*background:#AED8CE;*/
}
abbr.gen {
    margin: 0 2px 0 2px;
    padding:0 2px 0 2px;
/*    background:#C6DFCC;*/
}

span.etym {
    margin: 0 2px 0 2px;
    padding:0 2px 0 2px;
    /*background-color:#E0EAD1;*/
}


ul.vocabularia {
    list-style-type:none;
    display:inline;
    margin:0px;
}

ul.vocabularia li {
    margin: 0 2px 0 2px;
    padding:0 2px 0 2px;
    /*background-color:#F0F4CF;*/
    display:inline;
    
}

.etym span.mentioned {
    /*background:orange;*/
}

div.sense {
    margin-top:5px;
    margin-bottom:5px;
    margin-left:5px;
    padding-left:5px;
    border-left-color:#DCF511;
    border-left-width:2px;
    border-left-style:double;
}

span.def_pl, .def_la, .def_unknown {
    font-style:italic;
}

span.gloss_pl {
    border-bottom-color:green;
    border-bottom-style:dotted;
}

span.numbering {
    margin-left:2px;
    margin-right:2px;
    font-weight:bold;
}

entry *:empty
{
    display:none;
}

i.note_sign {
    font-style:normal;
}
i.note_sign::after {
    content:" ";
}

